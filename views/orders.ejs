    <script>
        (async function loadNav() {
            const data = await fetch('/load-nav');
            const navHtml = await data.text();
            document.getElementsByTagName('header')[0].innerHTML = navHtml;
        })();
        
        (async function loadOrdersList() {
            const data = await fetch('/orders-list');
            const ordersListHTML = await data.text();
            document.getElementsByClassName('orders-table')[0].innerHTML = ordersListHTML;
        })();

    </script>
</head>
