    <link rel="stylesheet" href="/css/product.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <script>
        let cnt = 1;
        function increase() {
            cnt++;
            document.getElementsByClassName('product-cnt')[0].innerText = cnt;
        }
        function decrease() {
            if(cnt > 1) {
                cnt--;
                document.getElementsByClassName("product-cnt")[0].innerText = cnt;
            }
        }
    </script>
</head>
